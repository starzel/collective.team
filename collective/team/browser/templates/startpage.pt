<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.team">
  <head>
    <title />
  </head>
  <body>

    <div class="intranet" metal:fill-slot="main">
      <tal:main-macro metal:define-macro="main">

        <div class="pseudo_portlet_manager">
          <dl class="portletPseudo" 
              tal:repeat="project view/projects"
              tal:attributes="class python:project['is_member'] and 'portletPseudo teamMember' or 'portletPseudo  noTeamMember'">
            <dt class="portletHeader pseudoPortletHeader" tal:attributes="style python:'background-color: ' + (str(project['color']) or '')">                
              <span  
                  class="project" 
                  tal:condition="not:project/is_member"
                  tal:content="project/title">Linked Project</span>
              <a href="#" 
                  class="project" 
                  tal:condition="project/is_member"
                  tal:attributes="href project/path" 
                  tal:content="project/title">Linked Project</a>
              <span class="toggles ui-icon ui-icon-arrowstop-1-s"></span>
              <span class="toggles ui-icon ui-icon-arrowstop-1-n" style="display:None"></span>
            </dt>
            <dd class="portletItem" style="display: None;">
                <p class="teamDescription" tal:content="project/description"></p>
            </dd>
            <dd class="portletItem" style="display: None;">
              <h4>Administratoren</h4>
              <ul>
                <li class="result" tal:condition="not:project/admins">
                    <a href="mailto:redaktion@idea-frankfurt.eu">
                        <tal:block replace="structure context/portal_url/group.png"/>
                        IDeA-Redaktion
                    </a>
                </li>
                <li class="result" tal:repeat="doc project/admins">
                  <a href="#"
                     tal:attributes="href python: 'mailto: ' + doc['email']"
                     tal:define="icon doc/membertype">
                      <tal:block replace="structure python:path('context/portal_url/%s.png' % icon)"/>
                      <span omit-tag=""  tal:content="doc/username"></span>
                  </a>
                </li>
              </ul>
              <h4 tal:condition="project/authors">Mitglieder</h4>
              <ul>
                <li class="result" tal:repeat="doc project/authors">
                  <a href="#"
                     tal:attributes="href python: 'mailto: ' + doc['email']"
                     tal:define="icon doc/membertype">
                      <tal:block replace="structure python:path('context/portal_url/%s.png' % icon)"/>
                      <span omit-tag=""  tal:content="doc/username"></span>
                  </a>
                </li>
              </ul>
            </dd>
            <dd class="portletFooter pseudoPortletFooter" />
          </dl>
          <div style="clear:both;" ></div>
        </div>
        <script type="text/javascript">
          jQuery(document).ready(function(){
              team.startpage_init();
          });
        </script>
      </tal:main-macro>
    </div>
  </body>
</html>
